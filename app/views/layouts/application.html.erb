<!DOCTYPE html>
<html>
  <head>
    <title>Elamigo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="header">
      <%= render "shared/header" %>
    </div>
    <div id="content">
      <% if flash.notice %>
        <p><%= flash.notice %></p>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
